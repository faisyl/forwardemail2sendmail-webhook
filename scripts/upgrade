#!/bin/bash

source /usr/share/yunohost/helpers
source _common.sh
 
#=================================================
# MIGRATION: RENAME WEBHOOK_SECRET TO WEBHOOK_KEY
#=================================================
old_secret=$(ynh_app_setting_get --app="$app" --key=webhook_secret)
if [ -n "$old_secret" ]; then
    ynh_app_setting_set --app="$app" --key=webhook_key --value="$old_secret"
    ynh_app_setting_delete --app="$app" --key=webhook_secret
fi

#=================================================
# MIGRATION: DEFAULT BACKEND_TYPE TO SENDMAIL
#=================================================
current_backend=$(ynh_app_setting_get --app="$app" --key=backend_type)
if [ -z "$current_backend" ]; then
    ynh_app_setting_set --app="$app" --key=backend_type --value="sendmail"
fi

#=================================================
# STOP SYSTEMD SERVICE
#=================================================
ynh_script_progression --message="Stopping $app's systemd service..." --weight=1

ynh_systemctl --service="$app" --action="stop" --log_path="/var/log/$app/$app.log"

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression --message="Upgrading source files..." --weight=1

# Download new source
download_app_source "$install_dir"

chown -R "$app:www-data" "$install_dir"

#=================================================
# BUILD APPLICATION
#=================================================
ynh_script_progression --message="Building Go application..." --weight=5

ynh_secure_remove --file="$install_dir/bin/$app"
mkdir -p "$install_dir/bin"
build_go_app "$install_dir" "$app"

#=================================================
# REAPPLY SYSTEM CONFIGURATIONS
#=================================================
ynh_script_progression --message="Upgrading system configurations related to $app..." --weight=1

ynh_config_add_systemd

ynh_config_add_nginx

ynh_config_add_logrotate --non-append

yunohost service add "$app" --description="Go web application" --log="/var/log/$app/$app.log"

# Add application user to postdrop group to allow sendmail/postdrop usage
if ! groups "$app" | grep -q "\bpostdrop\b"; then
    usermod -a -G postdrop "$app"
fi

#=================================================
# START SYSTEMD SERVICE
#=================================================
ynh_script_progression --message="Starting $app's systemd service..." --weight=1

ynh_systemctl --service="$app" --action="start" --log_path="/var/log/$app/$app.log"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression --message="Upgrade of $app completed" --last
